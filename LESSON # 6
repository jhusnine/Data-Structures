//WHILE LOOP 

EXAMPLE #1
#include <stdio.h>

int main()
{
     //while loop
     int i = 1;
    while(1 <= 5){
         printf("%d\n", i);
         i++; //i= 1 + 1
         
     return 0;
         
    }
}

EXAMPLE # 2
#include <stdio.h>
#include <stdlip.h>

int main()
{
     //while loop with user input
     int number;
    printf("Enter a number (negative to stop): ")
    scanf("%d", &number);
    
    while(number >= 0) {
         printf("You entered: % d\n, number ")
    }
}

// DO WHILE LOOP 

EXAMPLE 1

#include <stdio.h>
#include <stdlib.h>

int main()
{
     // DO WHILE LOOP
     int i = 1;
     do {
          printf("%d\n", i);
          i++;
     } while (i <= 5);
     
     return 0;
}

