//  atm password example
#include <stdio.h>
#include <stdlib.h>

int main()
{
     //  ATM Pin verification
     
     int enteredPIN;
     int correctPIN = 1234;
     
     printf("Enter your ATM PIN: ");
     scanf("%d", &enteredPIN);
     
     
     while (enteredPIN != correctPIN) {
          
          printf("INcorrect PIN. Please try again: ");
          scanf ("%d", &enteredPIN);
          
     }
     printf( "PIN Aaccepted. Welcome\n");
     return 0;
     
}

//FOR LOOP 

EXAMPLE 1

#include <stdio.h>
#include <stdlib.h>

int main()
{
     // FOR LOOP
     int i;
     for(i = 1; i <= 5; i ++) {
          printf("%d\n", i);
     }
     return 0;
     
}

EXAMPLE 2

#include <stdio.h>
#include <stdlib.h>

int main()
{
     // FOR LOOP
     
     int numbers[] = { 10, 20, 30, 40, 50};
     int i;
     for(i = 0; i <= 4; i ++) {
          printf("Element %d: %d\n", i, numbers[i]);
     }
     return 0;
     
}

EXAMPLE 3
#include <stdio.h>
#include <stdlib.h>

int main()
{
     // FOR LOOP
     int i, j;
     for(i = 1; i <= 5; i++) { // outer loop for rows
          for(j = 1; j <= 5; j++){
               printf("%d\t", i * j);
          }
          printf("\n");
          }
     return 0;
     
}

EXAMPLE 4
#include <stdio.h>
#include <stdlib.h>

int main()
{
     // for nested
     int matrix[3][3] = {
          {1, 2, 3},
          {4, 5, 6},
          {7, 8, 9}
     };
     
     int i, j;
     for(i = 0; i < 3; i++) { // Corrected condition and added semicolon
          for(j = 0; j < 3; j++) {
               printf("%d ", matrix[i][j]); // Added space for readability
          }
          printf("\n"); // Print a newline after each row
     }
     return 0;
}











